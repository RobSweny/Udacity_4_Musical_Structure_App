<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_margin="10dp"
    android:paddingStart="10dp"
    android:paddingLeft="10dp">


    <TextView
        android:id="@+id/song_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="song name" />

    <TextView
        android:id="@+id/artist_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        tools:text="artist name" />

    <TextView
        android:id="@+id/play_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toStartOf="@id/play_imagebutton"
        android:layout_toLeftOf="@id/play_imagebutton"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Play" />


    <ImageButton
        android:id="@+id/play_imagebutton"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@id/song_name_textview"
        android:layout_alignRight="@id/song_name_textview"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/play_song_icon" />

</RelativeLayout>